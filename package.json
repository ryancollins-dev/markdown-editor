{
  "name": "markdown-editor",
  "version": "1.0.0",
  "description": "Electron markdown editor application",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build:macos": "electron-builder --macos --dir",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "publish:github": "electron-builder --linux -p always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryancollins-dev/markdown-editor.git"
  },
  "keywords": [],
  "author": "Ryan Collins",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ryancollins-dev/markdown-editor/issues"
  },
  "homepage": "https://github.com/ryancollins-dev/markdown-editor#readme",
  "devDependencies": {
    "electron": "^21.1.1",
    "electron-builder": "^23.6.0",
    "got": ">=12.5.2"
  },
  "dependencies": {
    "electron-updater": "^5.3.0",
    "simplemde": "^1.11.2"
  },
  "build": {
    "appId": "com.my.markdown-editor",
    "productName": "Markdown editor",
    "publish": {
      "provider": "github",
      "owner": "ryancollins-dev",
      "repo": "electron-updates"
    }
  }
}
